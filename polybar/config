foreground = ${colors.foreground}

overline-size = 3
underline-size = 6
line-color = #ffffff

;border-size = 0
border-left-size = 54
border-right-size = 54
border-top-size = 10
border-bottom-size = 10
;border-bottom-color = #000000

;padding-left = 28
;padding-right = 28

