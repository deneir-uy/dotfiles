;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev


[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 3
underline-size = 6
line-color = #ffffff

;border-size = 0
border-left-size = 54
border-right-size = 54
border-top-size = 10
border-bottom-size = 10
;border-bottom-color = #000000

;padding-left = 28
;padding-right = 28

module-margin = 2

font-0 = overpass:pixelsize=8;0
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Wuncon Siji:pixelsize=10;1
font-3 = FontAwesome:size=9;0

modules-left = xwindow
modules-center = i3
modules-right = eth cpu memory date

override-redirect = true

wm-restack = i3

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label-font = 1
label =   %title:0:170:...%
format-padding = 5
format-background = ${colors.blue}
format-underline = ${colors.background}
format-overline = ${colors.background}
format-foreground = ${colors.white}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 5

label-occupied = %index%
label-occupied-padding = 5

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 5

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
;ws-icon-default = 

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 5
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.red}
label-focused-foreground = ${colors.black}
label-focused-underline = ${colors.background}
label-focused-overline = ${colors.background}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-underline = ${colors.background}
label-unfocused-overline = ${colors.background}
label-unfocused-foreground = ${colors.black}
label-unfocused-background = #FEDDD0
label-unfocused-padding = 5

; visible = Active workspace on unfocused monitor
label-visible = %icon%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 5

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = #B84E46
label-urgent-foreground = #FEDDD0
label-urgent-padding = 5

[module/cpu]
