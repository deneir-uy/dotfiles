format-padding = 5
;format-background = #FFEA00
;format-underline = #468B8B
format-overline = #7892ab
format-warn = <ramp> <label-warn>
format-warn-underline = #d48b94
;format-warn-overline = #d48b94

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/spotify]
type              = custom/script
exec              = ~/git-repos/dotfiles/polybar/mediaplayer
exec-if           = pgrep spotify > /dev/null
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.green}
format-background = ${colors.black}
format-padding    = 5

[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec playerctl previous
format-foreground = ${colors.green}
format-background = ${colors.black}
format-padding    = 10

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec playerctl next
format-foreground = ${colors.green}
format-background = ${colors.black}
format-padding    = 10

[module/playpause]
type              = custom/script
exec              = python3 ~/git-repos/dotfiles/polybar/playpause.py
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.green}
format-background = ${colors.black}
format-padding    = 10

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5]

